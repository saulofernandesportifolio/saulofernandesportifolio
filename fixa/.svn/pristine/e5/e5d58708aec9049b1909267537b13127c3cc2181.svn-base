							LEFT JOIN solicitacao_fases sf
								ON u.id_usuario = sf.id_usuario_resp
							LEFT JOIN(
								SELECT 
									COUNT(id_solicitacao) n_pedidos,
									id_usuario_resp
								FROM solicitacao_fases 
								WHERE tramitacao = 'Concluído'
								GROUP BY id_usuario_resp
								UNION
								SELECT 
