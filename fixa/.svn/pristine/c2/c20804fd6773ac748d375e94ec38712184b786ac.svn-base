#menu_options{
	width: 70%;
    float: left;
    background-color: #3b5998;
    color: white;
}

#menu_options li{
	background-color: #3b5998;
	color: white;
}

#menu_usuario{
	width: 30%;
    float: left;
    text-align: right;
    background-color: #3b5998;
    color: white;
}

