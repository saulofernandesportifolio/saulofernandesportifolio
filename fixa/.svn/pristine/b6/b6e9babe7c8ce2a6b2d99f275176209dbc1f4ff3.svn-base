@charset "utf-8";
/* CSS Document */



/*font do body*/
body,input,select{
font:13px Verdana;
}

/*div controle conteudo da página*/
.divctl
{
width:98.5%;
height: auto;
position: absolute;
top: 0;
left: 0;
right:0;
z-index: 0;
border: transparent;
}


/*Definicao fieldset*/
#fieldset{
margin-top: 20px;
margin-left:300px;
margin-bottom:10px;
padding-bottom: 10px;
background: #EBE8E8; 
height:auto;
width:600px;
border:1px solid silver;
z-index: -25;
}

/*div controle textos form servico*/
.divformservico{
 margin-top:2px;  
 margin-left:50px;
 margin-bottom: auto;
 width: 600px;
 height:0 auto;
 
     
}

/*controle login */
#login{
	width:300px;
	margin:0 auto;
	position:relative;
	top:200px;
	border:1px solid silver;
	padding:15px;
    background:#EBE8E8;
}

/*controle logo*/
.logo{
	width:200px;
	height:58px;
	margin:0 auto;
	padding:7px;
	position:relative;
	top:5px;
}

/*centralizar */
.acomodar{
	margin:0 auto;
	width:250px;
}

/*controle do form login*/
.form  label{
	display:block;
	padding-top:5px;
}


/* classe para textos*/
.txt{
	border:none;
	height:25px;
	width:250px;
	border:thin solid #f1f1f1;
}
.txt:focus{
	border:thin solid #678b97;
	box-shadow:0 2px 10px #678b97;
	-webkit-box-shadow:0 2px 10px #678b97;
	-moz-box-shadow:0 2px 10px #678b97;
}

