/*classe para formatção do botão login*/
.sb{
	display:block;
	border:none;
	width:250px;
	height:40px;
	margin-top:10px;
	cursor:pointer;
	font:400 18px Oswald;
	color:#fff;
    background:#808080;
}
.sb:hover{
	background:#678b97;
	color:#fff;
}

/*classe para formatção do botão form*/
.sb2{
	/*display:block;*/
	border:none;
	width:100px;
	height:25px;
	margin-top:1px;
	cursor:pointer;
	font:600 13px Oswald;
	color:#fff;
    background:#808080;
}
.sb2:hover{
	background:#678b97;
	color:#fff;
}

/* classe para textos*/

/*Classes de herança*/
.bradius{
	border-radius:6px;
	-webkit-border-radius:6px;
	-moz-border-radius:6px;
    
      
}

/*Classes de herança - desativado
.bradius{
     border-radius:6px;
	-webkit-border-radius:6px;
	-moz-border-radius:6px;
    behavior:url(css/ie-css3.htc);
}*/


.fleft{
	float:left;
}
.fright{
	float:right;
}
/*Múltiplos Estilos*/
.txt,.txt:focus,.sb,.sb:hover,#cadastrar:hover,#cadastrar{
	transition:all 0.5s linear;
	-webkit-transition:all 0.5s linear;
	-moz-transition:all 0.5s linear;
}

/*configurações de campo*/
