<?php

  function arrumadata($string) {
      if($string == ''){
      $data= substr($string,8,2)."".substr($string,5,2)."".substr($string,0,4);   
          
      }else{
          
      $data= substr($string,8,2)."/".substr($string,5,2)."/".substr($string,0,4);   
      }

      return $data;
  }


